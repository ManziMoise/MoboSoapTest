<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MakePaymentActivity">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

      <EditText
          android:id="@+id/fromMemberPrincipalTypeEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="fromMemberPrincipalType"
          android:gravity="center"></EditText>
      <EditText
          android:id="@+id/fromMemberEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="fromMember"
          android:gravity="center"></EditText>
      <EditText
          android:id="@+id/toMemberPrincipalTypeEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="toMemberPrincipalType"
          android:gravity="center"></EditText>



      <EditText
          android:id="@+id/amountEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="amount"
          android:gravity="center"></EditText>
      <EditText
          android:id="@+id/descriptionEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="description"
          android:gravity="center"></EditText>
      <EditText
          android:id="@+id/transferTypeIdEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="transferTypeId"
          android:gravity="center"></EditText>


      <EditText
          android:id="@+id/credentialsEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="credentials"
          android:gravity="center"></EditText>
      <EditText
          android:id="@+id/internalNameEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="internalName"
          android:gravity="center"></EditText>
      <EditText
          android:id="@+id/valueEd"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:hint="value"
          android:gravity="center"></EditText>



      <Button
          android:id="@+id/submitBtn"
          android:layout_width="match_parent"
          android:layout_height="50sp"
          android:layout_marginStart="50sp"
          android:layout_marginEnd="50sp"
          android:layout_marginTop="20dp"
          android:text="Submit"
          android:backgroundTint="#f3f6"
          android:textColor="#fff"
          android:gravity="center"></Button>



    </LinearLayout>
  </ScrollView>



  </LinearLayout>