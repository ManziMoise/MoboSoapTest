<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AuthenticateAgentActivity">

    <EditText
        android:id="@+id/principalTypeEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Principal Type"
        android:gravity="center"></EditText>
    <EditText
        android:id="@+id/principalEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Principal"
        android:gravity="center"></EditText>
    <EditText
        android:id="@+id/credentialsEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Credentials"
        android:gravity="center"></EditText>
    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:backgroundTint="#f3f6"
        android:textColor="#fff"
        android:gravity="center"></Button>


</LinearLayout>